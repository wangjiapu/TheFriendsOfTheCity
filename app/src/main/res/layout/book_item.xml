<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_margin="8dp"
    android:layout_height="wrap_content"
    android:id="@+id/book_item">

    <ImageView
        android:id="@+id/book_image_view"
        android:layout_width="100dp"
        android:layout_height="130dp"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/zsz"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">
        <TextView
            android:id="@+id/book_text_view_name"
            android:layout_width="match_parent"
            android:maxLines="1"
            android:layout_height="wrap_content"
            android:text="texttexttexttext"/>

        <TextView
            android:id="@+id/book_text_view_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="texttexttexttext"/>
        <TextView
            android:id="@+id/book_text_view_marks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="texttexttexttext"/>
        <TextView
            android:id="@+id/book_text_view_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="texttexttexttext"/>
    </LinearLayout>


</LinearLayout>
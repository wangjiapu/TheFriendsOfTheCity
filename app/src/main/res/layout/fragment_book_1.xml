<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:id="@+id/gengduo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="更多"
        android:textSize="15sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_gravity="right"/>

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_gravity="center_horizontal"
            android:id="@+id/book_frame1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <include layout="@layout/book_item"/>
        </FrameLayout>
        <FrameLayout
            android:layout_gravity="center_horizontal"
            android:id="@+id/book_frame2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <include layout="@layout/book_item"/>
        </FrameLayout>
        <FrameLayout
            android:layout_gravity="center_horizontal"
            android:id="@+id/book_frame3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <include layout="@layout/book_item"/>
        </FrameLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/book_unlisted"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="您未登录，请先登录！"
        android:layout_gravity="center_vertical|center_horizontal"
        />
    <ProgressBar
        android:id="@+id/book_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="200dp"
        />

</LinearLayout>
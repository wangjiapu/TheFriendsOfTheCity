<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@mipmap/zsz"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="书名"
        android:textSize="30sp"
        android:layout_alignTop="@+id/imageView2"
        android:layout_toRightOf="@id/imageView2"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imageView2"
        android:layout_below="@id/textView2"
        android:text="作者名"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="小小猫"
        android:layout_alignTop="@+id/imageView3"
        android:layout_toEndOf="@+id/button"
        android:layout_marginTop="14dp"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/author"
        android:layout_marginStart="13dp"
        android:layout_below="@+id/textView3"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_marginTop="17dp"/>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:srcCompat="@mipmap/date"
        android:layout_below="@+id/imageView3"
        android:layout_alignStart="@+id/imageView3"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2017年10月1日前"
        android:layout_alignTop="@+id/imageView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginTop="15dp"/>

    <ImageView
        android:id="@+id/star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/imageView2"
        app:srcCompat="@mipmap/favorite"/>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="归还此书"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/imageView2"/>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        app:srcCompat="@mipmap/message"
        android:layout_below="@+id/button"
        android:layout_toStartOf="@+id/button"/>

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/share"
        android:layout_marginStart="14dp"
        android:layout_above="@+id/textView7"
        android:layout_toEndOf="@+id/button"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView6"
        android:layout_below="@+id/imageView6"
        android:text="私信"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分享"
        android:layout_below="@+id/imageView6"
        android:layout_alignStart="@+id/imageView7"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_marginTop="28dp"/>

</RelativeLayout>